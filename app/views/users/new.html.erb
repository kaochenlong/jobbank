<h1>註冊</h1>

<%= form_with(model: @user, data: { turbo: false }) do |f| %>
  <%= render 'shared/form/error_message', record: @user %>

  <div class="field">
    <%= f.label :email, 'Email 信箱' %>
    <%= f.email_field :email%>
  </div>

  <div class="field">
    <%= f.label :password, '密碼' %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '密碼確認' %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :birthday, '生日' %>
    <%= f.date_field :birthday, min: 100.years.ago, max: 15.years.ago %>
  </div>

  <div class="field">
    <%= f.label :gender, '性別' %>
    <%= f.select :gender, User.gender_list %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :agree_to_terms, class: 'mx-2' %>
    <%= f.label :agree_to_terms, '我同意網站的隱私權及使用條款', class: 'w-full text-left' %>
  </div>

  <%= f.submit '註冊', class: 'btn btn-primary' %>

<% end %>
