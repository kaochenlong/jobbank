<h1 class="heading-1"><%= @resume.name %> 履歷</h1>

<section class="grid grid-cols-12 gap-2">
  <section class="col-span-8">
    <article>
      <h3 class="font-bold">簡介</h3>
      <%= @resume.intro %>
    </article>
  </section>

  <aside class="col-span-4">
    <h2 class="text-lg font-bold">評論</h2>
    <%= form_with(model: @comment) do |form| %>
      <%= form.text_area :content, class: 'w-full rounded', rows: 6 %>
      <%= form.submit "新增評論", class: 'btn btn-primary' %>
    <% end %>
  </aside>
</section>
