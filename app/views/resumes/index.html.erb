<h1 class="heading-1">履歷列表</h1>

<form>
  <input type="text" name="keyword" value="<%= params[:keyword] %>" placeholder="請輸入關鍵字...">
  <input type="submit" class="btn btn-primary" value="查詢">
</form>

<%= link_to '新增履歷', new_resume_path, class: 'btn btn-primary mt-2' if policy(Resume).new? %>

<section data-controller="sortable"
         class="grid grid-cols-1 gap-2 mt-2 lg:grid-cols-3 md:grid-cols-2">
  <%= render @resumes %>
</section>
