<section class="resume-card">
  <header>
    <div class="cover">
     <%= link_to resume_path(resume) do %>
       <img src="https://fakeimg.pl/350x200/ff0000,128/000,255">
     <% end %>
    </div>
  </header>

  <section class="info">
    <div class="basic-info">
      <h2 class="username"><%= resume.name %></h2>
      <address class="location"><%= resume.city %></address>
    </div>
    <article class="intro truncate">
      <%= link_to resume.intro&.truncate(75), resume_path(resume) %>
    </article>
  </section>

  <footer>
    <time class="update-time"><%= format_date(resume.updated_at) %></time>
    <div class="functions">
      <% if policy(resume).new? %>
        <%= link_to '編輯', edit_resume_path(resume), class: 'btn' %>
        <%= link_to '建立副本', '#', class: 'btn' %>
        <%= link_to '刪除', resume_path(resume),
                           class: 'btn btn-danger',
                           method: 'delete',
                           data: {confirm: '確認刪除?'} %>
      <% end %>
    </div>
  </footer>

</section>
